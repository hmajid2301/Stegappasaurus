{
  "name": "stegappasaurus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "android-build-apk": "cd android && ./gradlew assembleRelease --no-daemon",
    "android-bundle": "react-native bundle --platform android --dev false --entry-file ./index.js --bundle-output ./android/app/src/main/assets/index.bundle --sourcemap-output ./android/app/src/main/assets/index.map --assets-dest ./android/app/src/main/res/",
    "android-clean": "cd android && ./gradlew clean",
    "android-debug": "cd android && ./gradlew assembleDebug",
    "android-emulator": "./util/startEmulator.sh TestDevice",
    "android-lint": "cd android && ./gradlew -Pci --console=plain :app:lintDebug -PbuildDir=lint",
    "android-run": "react-native run-android",
    "code-formatter": "prettier src/**/*.{tx,tsx}",
    "code-formatter-check": "prettier --check src/**/*.{tx,tsx}",
    "compiler-check": "tsc --project . --noEmit --pretty --skipLibCheck",
    "coverage": "jest --coverage",
    "deploy-services": "firebase deploy --only functions",
    "firebase-emulator": "firebase emulators:start",
    "generate-service-models": "./util/servicesModelGenerator.sh",
    "ios": "react-native run-ios",
    "lint": "tslint src/**/*.{tx,tsx}",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "tests": "jest"
  },
  "dependencies": {
    "@react-native-community/netinfo": "3.3.0-reachability.4",
    "apisauce": "1.0.3",
    "expo-image-picker": "5.0.2",
    "expo-location": "5.0.1",
    "expo-mail-composer": "5.0.1",
    "expo-media-library": "5.0.1",
    "expo-web-browser": "5.0.3",
    "firebase": "6.3.1",
    "lottie-react-native": "2.6.1",
    "moment": "2.24.0",
    "react": "16.8.6",
    "react-native": "0.59.9",
    "react-native-app-intro-slider": "3.0.0",
    "react-native-collapsible": "1.4.0",
    "react-native-config": "0.11.7",
    "react-native-elements": "1.1.0",
    "react-native-firebase": "5.5.5",
    "react-native-gesture-handler": "1.3.0",
    "react-native-markdown-renderer": "3.2.8",
    "react-native-rate": "1.1.6",
    "react-native-share": "1.2.1",
    "react-native-share-menu": "2.2.2",
    "react-native-snackbar": "0.5.5",
    "react-native-splash-screen": "3.2.0",
    "react-native-unimodules": "0.4.2",
    "react-native-vector-icons": "6.4.2",
    "react-navigation": "3.3.0",
    "react-redux": "7.1.0",
    "redux": "4.0.4",
    "redux-persist": "5.10.0",
    "sunrise-sunset-js": "2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.5.4",
    "@babel/runtime": "7.5.4",
    "@types/image-size": "0.7.0",
    "@types/jest": "24.0.15",
    "@types/react": "16.8.23",
    "@types/react-native": "0.60.0",
    "@types/react-native-app-intro-slider": "3.0.0",
    "@types/react-native-share": "1.1.2",
    "@types/react-native-share-menu": "2.2.0",
    "@types/react-navigation": "3.0.5",
    "@types/react-redux": "7.1.1",
    "@types/react-test-renderer": "16.8.2",
    "@types/sunrise-sunset-js": "2.0.0",
    "babel-jest": "24.1.0",
    "babel-plugin-module-resolver": "3.2.0",
    "canvas": "2.5.0",
    "firebase-tools": "6.7.1",
    "image-size": "0.7.4",
    "jest": "24.3.0",
    "jest-react-native": "18.0.0",
    "metro-react-native-babel-preset": "0.54.0",
    "prettier": "1.16.4",
    "react-native-cli": "2.0.1",
    "react-test-renderer": "16.8.3",
    "ts-jest": "24.0.0",
    "tslib": "1.9.3",
    "tslint": "5.13.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-react": "3.6.0",
    "typescript": "3.4.5",
    "typescript-fsa": "3.0.0-beta-2"
  },
  "rnpm": {
    "assets": [
      "src/assets/fonts/"
    ]
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "modulePathIgnorePatterns": [
      ".history",
      "data.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    }
  }
}
