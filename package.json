{
  "main": "node_modules/expo/AppEntry.js",
  "private": true,
  "scripts": {
    "deploy-services": "firebase deploy --only functions",
    "start": "./util/startExpoCLI.sh && expo-cli start",
    "tests": "jest",
    "coverage": "jest --coverage",
    "lint": "tslint src/**/*.{tx,tsx}",
    "lint:code-formatter": "prettier --check src/**/*.{tx,tsx}",
    "lint:compiler": "tsc --project . --noEmit --pretty --skipLibCheck"
  },
  "dependencies": {
    "@expo/vector-icons": "9.0.0",
    "apisauce": "1.0.2",
    "expo": "32.0.3",
    "expo-cli": "2.15.4",
    "firebase": "5.10.0",
    "js-base64": "2.5.1",
    "moment": "2.24.0",
    "native-base": "2.12.0",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz",
    "react-native-dotenv": "0.2.0",
    "react-native-indicators": "0.13.0",
    "react-native-markdown-renderer": "3.2.8",
    "react-navigation": "3.3.0",
    "react-redux": "6.0.1",
    "redux": "4.0.1",
    "redux-persist": "5.10.0",
    "sentry-expo": "1.12.0",
    "sunrise-sunset-js": "2.0.0"
  },
  "devDependencies": {
    "@types/expo": "32.0.3",
    "@types/jest": "24.0.6",
    "@types/js-base64": "2.3.1",
    "@types/react": "16.8.4",
    "@types/react-native": "0.57.38",
    "@types/react-native-indicators": "0.13.1",
    "@types/react-navigation": "3.0.5",
    "@types/react-redux": "7.0.1",
    "@types/react-test-renderer": "16.8.1",
    "@types/sunrise-sunset-js": "2.0.0",
    "babel-plugin-module-resolver": "3.2.0",
    "firebase-tools": "6.7.1",
    "jest": "24.3.0",
    "jest-expo": "32.0.0",
    "prettier": "1.16.4",
    "react-native-typescript-transformer": "1.2.11",
    "react-test-renderer": "16.8.3",
    "ts-jest": "24.0.0",
    "tslib": "1.9.3",
    "tslint": "5.13.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-react": "3.6.0",
    "typescript": "3.3.3",
    "typescript-fsa": "3.0.0-beta-2"
  },
  "jest": {
    "preset": "jest-expo",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "modulePathIgnorePatterns": [
      ".history",
      "data.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    }
  }
}
