<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="backgroundColor">@color/background_light</item>
        <item name="logoName">@mipmap/icon_dark</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="backgroundColor">@color/background_dark</item>
        <item name="logoName">@mipmap/icon_light</item>
    </style>
</resources>